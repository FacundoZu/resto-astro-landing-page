---
// Location.astro
interface Props {
  address?: string;
  googleMapsUrl?: string;
  note?: string;
}

const { 
  address = "Calle Falsa 123, Salta, Argentina", 
  googleMapsUrl = "https://goo.gl/maps/example", 
  note = "Estacionamiento disponible en la calle. Se puede llegar en colectivo. :D" 
} = Astro.props;
---

<section id="location" class="relative py-24 bg-black text-white">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-3xl md:text-4xl font-bold mb-8">Donde encontrarnos</h2>
    <p class="text-gray-300 mb-6">{address}</p>
    <p class="text-gray-400 text-sm mb-8">{note}</p>

    <!-- Mapa oscuro -->
    <div class="w-full h-96 rounded-xl overflow-hidden shadow-lg">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3270.123456789!2d-65.412345!3d-24.782345!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x941da123456789ab%3A0xabcdef123456789!2sLa%20Esquina%20RestoBar!5e0!3m2!1ses!2sar!4v1690000000000!5m2!1ses!2sar"
        width="100%"
        height="100%"
        style="border:0; filter: grayscale(90%) brightness(60%);"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
</section>
